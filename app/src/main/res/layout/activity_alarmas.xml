<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context="com.example.juanpablorn30.firm.AlarmasActivity">

    <TextView
        android:id="@+id/txtAlarmasNoAlarmas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/no_alarmas" />

    <ListView
        android:id="@+id/alarmas_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8" />

    <Button
        android:id="@+id/btn_alarmas_send"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/blanco"
        android:textStyle="bold"
        android:background="@drawable/button"
        android:text="Enviar alarmas" />


</LinearLayout>
